# --- General Configuration ---
FLASK_ENV=production
# Generate a secure secret key with: python -c 'import secrets; print(secrets.token_hex(16))'
SECRET_KEY=your_production_secret_key

# --- Production Database (Example for Heroku) ---
# This will be provided by your hosting service
DATABASE_URL=postgresql://user:password@host:port/dbname

# --- API Keys ---
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_token_here
TWILIO_PHONE_NUMBER=+1234567890
SENDGRID_API_KEY=your_sendgrid_key_here

# --- Business Information ---
BUSINESS_NAME=Your HVAC Company
BUSINESS_EMAIL=info@yourhvac.com
BUSINESS_PHONE=+1234567890
BUSINESS_ADDRESS=123 Main St, City, State 12345
HOURLY_RATE=85
